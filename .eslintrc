{
  "plugins": ["react", "jest"],
  "rules": {
    "indent": [2, 2],
    "semi": [2, "always"],
    "quotes": ["error", "single"],
    "react/prop-types": 0,
    "object-curly-spacing": [
      2,
      "always",
      {
        "objectsInObjects": true,
        "arraysInObjects": false
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}
